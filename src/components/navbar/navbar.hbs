<div class="navbar">
    <form class="navbar__search-form" novalidate>
        <i class="fas fa-search navbar__search-icon"></i>
        <input type="text" class="navbar__search-input" placeholder="Looking things up" required>
        <input type="submit" class="removed">
        <div class="navbar__date-picker" data-visible="false">
            <div class="navbar__date-picker-text" data-selected="false" data-date="hour">1H</div>
            <div class="navbar__date-picker-text" data-selected="false" data-date="day">1D</div>
            <div class="navbar__date-picker-text" data-selected="false" data-date="week">1W</div>
            <div class="navbar__date-picker-text" data-selected="false" data-date="allTime">All</div>
        </div>
        <button class="navbar__search-wiper navbar__search-options">
            <i class="fas fa-calendar-alt navbar__search-options navbar__search-icon"></i>
        </button>
        <button class="navbar__search-wiper" id="search-wiper">
            <i class="fas fa-times navbar__search-wiper-icon"></i>
        </button>

    </form>
    {{#if userIsAuthorized}}
        <div class="navbar__user-section">
            <img src="{{user.avatarLink}}" alt="Avatar" class="navbar__user-avatar">
            <a href="{{paths.profile}}" class="navbar__username"> {{user.username}} </a>
        </div>
        <div class="navbar__actions">
            <a class="navbar__action" href="{{paths.createPin}}">
                <i class="fas fa-plus navbar__action-icon"></i>
            </a>
            <button class="navbar__action" name="dropdown-toggle">
                <i class="fas fa-ellipsis-v navbar__action-icon"></i>
            </button>
        </div>
        <div class="navbar__dropdown-actions">
            <button class="navbar__dropdown-action" name="logout">Log out</button>
        </div>
    {{else}}
        <div class="navbar__auth-section">
            <a href="{{paths.login}}" class="navbar__auth-link navbar__auth-link_primary">
                <span class="navbar__auth-text">Log in</span>
            </a>
            <a href="{{paths.signup}}" class="navbar__auth-link navbar__auth-link_secondary">
                <span class="navbar__auth-text">Sign up</span>
            </a>
        </div>
    {{/if}}
</div>
