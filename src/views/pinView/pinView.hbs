<div class="pin-browser">
    <img src="{{pin.imageLink}}" class="pin-browser__image-panel pin-image">
    <div class="pin-browser__info-panel">
        <div class="pin-browser__pin-info">
            <h1 class="info-panel__title">{{pin.title}}</h1>
            <div class="control-wrapper">
                <div class="info-panel__feedback-wrapper">
                    {{{feedbackControl}}}
                </div>
                {{{shareControl}}}
            </div>
                {{{boardControl}}}
            <div class="user-info">
                <div class="user-info__avatar">
                    <img src="{{profile.avatarLink}}" alt="upload-logo" class="user-info__avatar">
                </div>
                <a href="/profile/{{profile.ID}}" class="user-info__text">
                    <div class="user-info__text_username">{{profile.username}}</div>
                    <div class="user-info__text_followers">{{profile.followers}} followers</div>
                </a>
                {{#if userIsAuthorized}}
                    {{#if pinIsSelfOwned}}
                        <div class="user-info__follow-button user-info__follow-button_disabled">That's you</div>
                    {{else}}
                        <div class="user-info__follow-button
                    {{#if profile.followed}}
                        user-info__follow-button_inactive
                    {{else}}
                        user-info__follow-button_active
                    {{/if}}">{{#if profile.followed}}Following{{else}}Follow{{/if}}
                        </div>
                    {{/if}}
                {{/if}}
            </div>
            <div class="pin-description"> {{pin.description}}</div>
        </div>
        <div class="info-panel__comments-section">
            <h2 class="info-panel__comments-section-title">Comments</h2>
            <div class="info-panel__comments">
                {{#each comments}}
                    <div class="comment">
                        <img src="{{this.author.avatarLink}}" alt="logo" class="comment__avatar">
                        <div class="comment__text">
                            <a href="/profile/{{this.author.ID}}" class="comment__text_author">
                                {{this.author.username}}
                            </a>
                            <div class="comment__text_message">{{this.comment.text}}</div>
                        </div>
                    </div>
                {{else}}
                    <div class="info-panel__comments_text">Be first one to comment!</div>
                {{/each}}
            </div>
            {{#if userIsAuthorized}}
                <form class="comment-form">
                    <label for="comment-input" class="comment-form__label">Add comment</label>
                    <textarea class="comment-form__text" id="comment-input"></textarea>
                    <input type="submit" class="comment-form__submit" value="Send">
                </form>
            {{/if}}
        </div>
    </div>
</div>
