{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "lib": ["ESNext"],
    "allowJs": true,
    "outDir": "./dist/",
    "strict": true,
    "moduleResolution": "classic",
    "baseUrl": ".",
    "sourceMap": true,
    "esModuleInterop": true,
    "declaration": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },

  "include": [
    "./src/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
